{
    "env": {
      "browser": true,
      "webextensions": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:security/recommended"
    ],
    "plugins": [
      "chrome-extension",
      "react",
      "react-hooks",
      "security",
      "import"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "consistent-return": "error",
      "eqeqeq": ["error", "always"],
      "no-var": "error",
      "prefer-const": "error",
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "chrome-extension/no-unchecked-runtime-last-error": "warn",
      "chrome-extension/no-unsafe-eval": "error",
      "chrome-extension/no-unsafe-innerhtml": "error",
      "react/react-in-jsx-scope": "off",
      "react-hooks/rules-of-hooks": "error",
      "security/detect-non-literal-fs-filename": "warn"
    }
  }
  